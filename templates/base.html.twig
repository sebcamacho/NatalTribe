            {% if app.user %}
            {% else %}
                
            <li> <a href="{{ path('app_login') }}">Se connecter</a></li>
            {% endif %}
            {% if app.user %}
            <li class="dropdown_nav"> <a class="dropdown_active" href="#"><i class="fas fa-user-circle"></i></a>

