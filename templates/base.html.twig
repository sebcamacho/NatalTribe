<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}NatalTribe{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/navbar.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/footer.css') }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('assets/js/main.js') }}"></script>
            
        {% endblock %}
    </head>
    <body>

    {% block navbar %}
    <nav>
        <a id="logo" href="{{ path('home') }}"> <img src="{{ asset('assets/images/logo_sans_bg.png')}}" alt=""> </a>
        <ul class="nav-links">
            <li class="dropdown_nav"> <a class="dropdown_active" href="#">À propos</a>

                <ul class="dropdown_content">
                    <li><a href="#">Mon approche</a></li>
                    <li><a href="#">Parcours</a> </li>
                    
                </ul>

            </li>

            <li> <a href="">Cours</a></li>
            <li> <a href="">Vidéos</a></li>
            <li> <a href="">Contact</a></li>
            <li> <a href="{{ path('app_login') }}">Se connecter</a></li>
            {% if is_granted('ROLE_ADMIN') %}
            <li> <a href="{{ path('admin') }}">Administration</a></li>
            {% endif %}
        </ul>

        <div class="burger">
            <span> </span>
        </div>
    </nav>

    {% endblock %}
    
    {% block body %}{% endblock %}



<script src="{{ asset('assets/js/menu.js') }}"></script>

</body>
</html>
